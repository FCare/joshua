{
    "id": "Pipeline Chat WebSocket",
    "name": "Pipeline Chat WebSocket", 
    "description": "Pipeline de chat conversationnel avec WebSocket et OpenAI",
    "steps": [
        {
            "id": "websocket_server",
            "type": "websocket_server",
            "config": {
                "host": "localhost",
                "port": 8768,
                "mode": "text_to_text"
            }
        },
        {
            "id": "openai_chat",
            "type": "openai_chat",
            "config": {
                "model": "gpt-4o-mini",
                "temperature": 0.7,
                "max_tokens": 1500,
                "system_prompt": "You are a helpful and friendly assistant. Provide clear, concise, and engaging responses."
            }
        }
    ],
    "connections": [
        {
            "from_step": "websocket_server",
            "to_step": "openai_chat"
        },
        {
            "from_step": "openai_chat", 
            "to_step": "websocket_server"
        }
    ]
}